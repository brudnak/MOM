
<!doctype html>
<html lang="en">
	<head>
		<title>Cust Search Results</title>		
        <%- include partials/meta.ejs %>
  </head>
	
	<body>
    <div ng-app="MyApp">
        <%- include partials/header.ejs %>

			<div class="container" ng-controller="AppCtrl as ctrl" ng-cloak>
        <div class="row">
          <div class="col-12 local-nav">
            <a class="btn btn-outline-primary btn-large mx-4" href="/cust">New Customer Search</a>
          </div>
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h2>Customer Search Results</h2>
              </div>

              <table class="table">
                <thead>
                  <tr>
                    <th>Cust</th>
                    <th>Name</th>
                    <th>Company</th>
                    <th width="13%">Phone</th>
                    <th width="20%">Email</th>
                    <th width="15%">Location</th>
                  </tr>
                </thead>
                <tbody> 
                  <% customers.forEach((item,index) =>  { %>
                    <tr>
                      <td><a href="/cust/<%=item.custnum %>"><%=item.custnum %></a></td>
                      <td><%=`${item.lastname}, ${item.firstname}` %></td>
                      <td><%=item.company %></td>
                      <td><%=item.phone %></td>
                      <td><%=item.email %></td>
                      <td><%=`${item.city}, ${item.state} ${item.zipcode}`%></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
			</div>
		</div>
		
		<%- include partials/footer.ejs %>
    
    <%- include partials/javascripts.ejs %>
		  
		<script src="/js/app.js"></script>
	</body>
</html>