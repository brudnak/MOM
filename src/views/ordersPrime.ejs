
<!doctype html>
<html lang="en">
	<head>
		<title>Unshipped Prime Orders</title>		
        <%- include partials/meta.ejs %>
  </head>
	
	<body>
    <div ng-app="MyApp">
        <%- include partials/header.ejs %>

			<div class="container" ng-controller="AppCtrl as ctrl" ng-cloak>
        <div class="row local-nav">

        </div>
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h2>Unshipped Prime Orders</h2>
              </div>

              <table class="table">
                <thead>
                  <tr>
                    <th>Order</th>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>Ship By</th>
                    <th>Order Total</th>
                    <th>Ship Method</th>
                  </tr>
                </thead>
                <tbody> 
                  <% orders.forEach((order,index) =>  { %>
                    <tr>
                      <td><a target="_blank" href="https://sellercentral.amazon.com/hz/orders/details?_encoding=UTF8&orderId=<%=order.AmazonOrderId %>"><%=order.AmazonOrderId %></a></td>
                      <td><%=order.PurchaseDate %></td>
                      <td><%=order.OrderStatus %></td>
                      <td><%=order.LatestShipDate %></td>
                      <td>$<%=order.OrderTotal.Amount %></td>
                      <td><%=order.ShipmentServiceLevelCategory %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
			</div>
		</div>
		
		<%- include partials/footer.ejs %>
    
    <%- include partials/javascripts.ejs %>
		  
		<script src="/js/app.js"></script>
	</body>
</html>